<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_seletor"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_usercenter_itemview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:src="@drawable/icon_setup_sample"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_item_myview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="4dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="lable"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/tv_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按到"
            android:gravity="left"
            android:singleLine="true"
            android:maxLength="25"
            android:ellipsize="middle"
            android:textSize="13sp" />


        <com.caro.smartmodule.viewComponent.imageviews.CircleImageView
            android:id="@+id/rightImg"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/scan_qr" />

        <ImageView
            android:id="@+id/iv_item_view_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light"></View>

</RelativeLayout>